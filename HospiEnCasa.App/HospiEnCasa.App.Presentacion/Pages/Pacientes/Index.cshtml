@page
@model HospiEnCasa.App.Presentacion.Pages_Pacientes.IndexModel
@{
}
 
<h1>Lista De Pacientes</h1>
<table class="table table-bordered">
    <thead>
    <tr> <th scope="col">Nombre</th>
        <th scope="col">Apellidos</th>
        <th scope="col">Telefono</th>
        <th scope="col">Genero</th>
        <th scope="col">options <a asp-page="./Create"> 
        <span class="material-icons">add</span></a></th>
    </tr>
  </thead>
      @foreach (var paciente in Model.Pacientes)
    { 
  <tbody>
    <tr>
      <td>@paciente.Nombre</td>
      <td>@paciente.Apellido</td>
      <td>@paciente.NumeroTelefonico</td>
       <td>@paciente.Genero</td>
      <td>  
          <a asp-page="./Details" asp-route-id="@paciente.Id">
          <span class="material-icons">description </span></a>
         <a asp-page="./Edit" asp-route-id="@paciente.Id"> 
         <span class="material-icons">edit</span></a>
        <a asp-page="./Delete" asp-route-id="@paciente.Id"> 
        <span class="material-icons">delete</span></a>
         <a asp-page="./AsignarMedico" asp-route-id="@paciente.Id"> 
        <span class="material-icons">medical_services</span></a>
        <a asp-page="./AddSigno" asp-route-id="@paciente.Id">
        <span class="material-icons">thermostat_auto</span></a>
         <a asp-page="../Historias/Create" asp-route-id="@paciente.Id">
        <span class="material-icons">history_edu</span></a>

      
     </td>
    </tr>      
  </tbody>
    }
</table>
